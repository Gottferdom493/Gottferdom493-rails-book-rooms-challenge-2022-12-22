<h3>Votre Hotel est le <%= @hotel.name %></h3>
<p>L'adresse : <%= @hotel.adresse %></p>
<p>Nombre de personne maximun : <%= @room.capacity %></p>
<p>Prix/nuit : <%= @room.price %>€</p>

<h4>Choix des dates</h4>
<%= form_for [@hotel, @room, @booking] do |f| %>

  <%= f.date_field :start_date, placeholder: "Ajout le nom" %>
  <%=f.date_field :end_date, placeholder: "Ajout l'adresse" %>

  <%= f.submit :Création %>
<% end %>

<%= link_to 'Revoir nos chambres', hotel_rooms_path %>
