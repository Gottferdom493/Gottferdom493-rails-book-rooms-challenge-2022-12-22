<div class="container">
  <div class="row mt-5">
    <h3>Votre Hotel est le <%= @hotel.name %></h3>
    <div class="col-12 col-sm-8 col-md-4 offset-sm-2 offset-md-4">
      <div class="banner_homepage">



  <p>L'adresse : <%= @hotel.adresse %></p>
  <p>Nombre de personnes maximun : <%= @room.capacity %></p>
  <p>Prix/nuit : <%= @room.price %>€</p>

<%= form_for [@hotel, @room, @booking] do |f| %>

  <%= f.date_field :start_date, placeholder: "Date de début" %>
  <%=f.date_field :end_date, placeholder: "Date de fin" %>

  <%= f.submit :Création %>
<% end %>

<%= link_to 'Revoir toutes nos chambre', hotels_path %>

      </div>
    </div>
  </div>
</div>
